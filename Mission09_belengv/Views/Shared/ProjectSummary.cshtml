@{
}
@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-light p-1">
        <h4>
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float: right; color: white; background-color: #003366">
                <small>Price: @Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">Book Title: @Model.Title</div>
    <div class="card-text p-1">Author: @Model.Author</div>
    <div class="card-text p-1">Publisher: @Model.Publisher</div>
    <div class="card-text p-1">ISBN: @Model.Isbn</div>
    <div class="card-text p-1">Classfication: @Model.Classification</div>
    <div class="card-text p-1">Category: @Model.Category</div>
    <div class="card-text p-1">Number of Pages: @Model.PageCount</div>

    <form method="post" asp-page="/Shopping">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text">
            <!--Extra Boostrap Hover title-->
            <button type="submit" class="btn btn-success btn-sm float-end" title="Don't miss the chance to buy this book!'">BUY</button>
        </span>
    </form>
</div>

